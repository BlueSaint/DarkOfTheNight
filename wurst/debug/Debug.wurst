package Debug

/** For tracking classes */

constant int eventDebugLevel=0

public abstract class Debug

	/** Tracks construction and destruction of instances */
	
	construct()
		printEvent("CONSTRUCT")
	
	ondestroy
		printEvent("DESTROY")
	
	protected function printEvent(string ev)
		debugPrint(getName()+I2S(this castTo int)+": "+ev,eventDebugLevel)
	
	protected abstract function getName() returns string